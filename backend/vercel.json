{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "/api/admin.js"
    },
    {
      "src": "/api/quiz/(.*)",
      "dest": "/api/quiz.js"
    },
    {
      "src": "/api/papers(.*)",
      "dest": "/api/papers.js"
    },
    {
      "src": "/api/channels",
      "dest": "/api/channels.js"
    },
    {
      "src": "/api/apps",
      "dest": "/api/apps.js"
    },
    {
      "src": "/api/help",
      "dest": "/api/help.js"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret"
  }
}